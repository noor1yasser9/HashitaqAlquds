<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:translationY="-13dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_8sdp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="@dimen/_60sdp"
                android:background="@color/colorAction"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/like"
                android:layout_width="0dp"
                android:layout_height="@dimen/_60sdp"
                android:background="@color/colorAction"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/commit"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="@dimen/_5sdp"
                android:layout_height="0dp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:background="@color/gray_800"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/commit"
                android:layout_width="0dp"
                android:layout_height="@dimen/_60sdp"
                android:background="@color/colorAction"
                app:layout_constraintEnd_toStartOf="@+id/like"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_60sdp"
                android:backgroundTint="@color/green_900"
                android:drawablePadding="@dimen/_16sdp"
                android:gravity="center"
                android:padding="@dimen/_16sdp"
                android:text="@string/like"
                app:backgroundTint="@color/green_900"
                app:drawableStartCompat="@drawable/ic_like"
                app:layout_constraintBottom_toBottomOf="@+id/commit"
                app:layout_constraintEnd_toStartOf="@+id/like"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialButton8"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_60sdp"
                android:backgroundTint="@color/green_900"
                android:drawablePadding="@dimen/_16sdp"
                android:gravity="center"
                android:padding="@dimen/_16sdp"
                android:text="@string/comment"
                app:backgroundTint="@color/green_900"
                app:drawableStartCompat="@drawable/ic_chat"
                app:layout_constraintBottom_toBottomOf="@+id/like"
                app:layout_constraintEnd_toEndOf="@+id/like"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/like"
                app:layout_constraintTop_toTopOf="@+id/like" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>