<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:autoTransition="animateToEnd"
        motion:duration="2000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/logoImageView"
               motion:framePosition="0"
               android:scaleX="1"
               android:scaleY="1" />
           <KeyAttribute
               motion:motionTarget="@+id/logoImageView"
               motion:framePosition="15"
               android:scaleY="1.2"
               android:scaleX="1.2" />
           <KeyAttribute
               motion:motionTarget="@+id/logoImageView"
               motion:framePosition="30"
               android:scaleX="0.8"
               android:scaleY="0.8" />
           <KeyAttribute
               motion:motionTarget="@+id/logoImageView"
               motion:framePosition="45"
               android:scaleY="1.2"
               android:scaleX="1.2" />
           <KeyAttribute
               motion:motionTarget="@+id/logoImageView"
               motion:framePosition="55"
               android:scaleY="1"
               android:scaleX="1" />
           <KeyAttribute
               motion:motionTarget="@+id/logoImageView"
               motion:framePosition="70"
               android:scaleY="1.2"
               android:scaleX="1.2" />
           <KeyAttribute
               motion:motionTarget="@+id/logoImageView"
               motion:framePosition="80"
               android:scaleY="1"
               android:scaleX="1" />
           <KeyAttribute
               motion:motionTarget="@+id/logoImageView"
               motion:framePosition="90"
               android:scaleY="0.8"
               android:scaleX="0.8" />
           <KeyAttribute
               motion:motionTarget="@+id/logoImageView"
               motion:framePosition="100"
               android:scaleY="1"
               android:scaleX="1"
               android:translationY="-100dp"
               />
           <KeyAttribute
               motion:motionTarget="@+id/titleSplash"
               motion:framePosition="100"
               android:scaleY="1"
               android:scaleX="1"
               android:translationY="330dp"
               />

       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>